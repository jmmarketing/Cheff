

<!--#################### HERO / JUMBOTRON #################################-->
  <div class="jumbotron jumbotron-fluid d-flex align-items-center hero-image">
    <div class="container text-center text-white ">
      <h1 id="hero-title"><i class="fas fa-utensils"></i></h1>
      <p id="hero-subtitle">{{chef.name}}</p>
    </div>
  </div>

  <!--#################### END HERO / JUMBOTRON #################################--><!--#################### CHEF SECTION #################################-->

<div class="container mb-4">
    <div class="row">

        <div class="col-12 col-lg-3 mt-1 mb-3">
            <div class="card">
                <img class="card-img-top" src="{{chef.pictureURL}}" alt="Chef Image">
                <div class="card-body">
                    <h4 class="card-title" id="chef-name">{{chef.name}}</h4>
                </div>
                <ul class="list-group list-group-flush" id="chef-attributes">
                    <li class="list-group-item" id="chef-email"><i class="far fa-envelope"></i> {{chef.email}}</li>
                    <li class="list-group-item" id="chef-creationDate"><i class="fas fa-user-plus"></i> {{date}}</li>
                    <li class="list-group-item"><a class="btn btn-secondary btn-block" id="add-recipe-button" href="/add-recipe/" role="button">Add Recipe</a></li>
                </ul>
            </div>
        </div>

        <!--#################### END CHEF SECTION #################################-->

        <div class="col-12 order-second col-lg-9">


            <div class="card mt-1">
                <h5 class="card-header">Most Recent Recipes</h5>
                <div class="card-body">

                    <div class="row">


                     

                        {{#each recipe}}
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="card mb-2">
                                <img class="card-img-top" id="all-recipe-img" src={{this.imgURL}} alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">{{this.name}}</h5>
                                    <a href="/recipe/{{this.id}}" class="btn btn-block btn-primary" id="view-recipe-button">View Recipe</a>
                                </div>
                            </div>
                        </div>

                        {{/each}}



                    </div>

                </div>
            </div>
        </div>

    </div>

</div>
